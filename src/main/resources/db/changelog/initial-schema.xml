<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Таблица currency -->
    <changeSet id="1" author="Aleksandr">
        <createTable tableName="currency">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <sql>
            INSERT INTO currency (name)
            VALUES ('USD'),
                   ('EUR'),
                   ('RUB'),
                   ('GBP');
        </sql>
    </changeSet>

    <!-- Таблица bank_book -->
    <changeSet id="2" author="Aleksandr">
        <createTable tableName="bank_book">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="bank_book"
                                 baseColumnNames="currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"
                                 constraintName="fk_bank_book_currency"/>
    </changeSet>

    <!-- Таблица address -->
    <changeSet id="3" author="Aleksandr">
        <createTable tableName="address">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(100)"/>
            <column name="home" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>

    <!-- Таблица users -->
    <changeSet id="4" author="Aleksandr">
        <createTable tableName="users">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)"/>
            <column name="address_id" type="INTEGER"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="address_id"
                                 referencedTableName="address"
                                 referencedColumnNames="id"
                                 constraintName="fk_users_address"/>
    </changeSet>

    <!-- Таблица group -->
    <changeSet id="5" author="Aleksandr">
        <createTable tableName="group">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Таблица user_groups для связи many-to-many -->
    <changeSet id="6" author="Aleksandr">
        <createTable tableName="user_groups">
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="group_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="user_groups" columnNames="user_id, group_id"/>

        <addForeignKeyConstraint baseTableName="user_groups"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_user_groups_user"/>

        <addForeignKeyConstraint baseTableName="user_groups"
                                 baseColumnNames="group_id"
                                 referencedTableName="group"
                                 referencedColumnNames="id"
                                 constraintName="fk_user_groups_group"/>
    </changeSet>

    <!-- Таблица status -->
    <changeSet id="7" author="Aleksandr">
        <createTable tableName="status">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <sql>
            INSERT INTO status (name)
            VALUES ('processing'),
                   ('successful'),
                   ('declined');
        </sql>
    </changeSet>

    <!-- Таблица transaction -->
    <changeSet id="8" author="Aleksandr">
        <createTable tableName="transaction">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source_bank_book_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="target_bank_book_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="initiation_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="source_bank_book_id"
                                 referencedTableName="bank_book"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_source"/>

        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="target_bank_book_id"
                                 referencedTableName="bank_book"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_target"/>

        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="status_id"
                                 referencedTableName="status"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_status"/>
    </changeSet>
</databaseChangeLog>